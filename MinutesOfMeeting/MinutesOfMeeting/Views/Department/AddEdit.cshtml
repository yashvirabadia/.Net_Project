@model MinutesOfMeeting.Models.DepartmentModel

@{
    ViewData["Title"] = (Model?.departmentID > 0) ? "Edit Department" : "Add Department";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Save"
                          asp-controller="Department"
                          method="post">

                        @if (Model?.departmentID > 0)
                        {
                            <input type="hidden" asp-for="departmentID" />
                        }

                        <div class="mb-3">
                            <label class="form-label">Department Name</label>
                            <input asp-for="departmentName" class="form-control" required />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="GetAllDepartment"
                               asp-controller="Department"
                               class="btn btn-secondary">
                                Back
                            </a>

                            <button type="submit" class="btn btn-primary">
                                @(Model?.departmentID > 0 ? "Update" : "Save")
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3">
                    @TempData["Error"]
                </div>
            }

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-3">
                    @TempData["Success"]
                </div>
            }
        </div>
    </div>
</div>
